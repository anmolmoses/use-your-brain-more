{
  "manifest_version": 3,
  "name": "Site Reminder Popup",
  "version": "0.1.0",
  "description": "Show a customizable reminder before visiting configured sites, with per-site messages and a cooldown timer.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html"
}
